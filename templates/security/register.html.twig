{% extends 'layout.html.twig' %}



{% block content %}
    <h1>Inscription</h1>
    
    {{ form_start(form) }} {# ouvre notre balise form #}
        <div class="container">
            <div class="row" >
                <div class="col-md-6" >
                    {{ form_row(form.firstname) }} {# affiche le bloc input pour ce champ #}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.birthdate) }}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.adress) }}
                    {{ form_row(form.cp) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.country) }}
                    {{ form_row(form.plainpassword) }}
                </div>
                <div class="col-md-6">                    
                    {{ form_row(form.avatar) }}                                                          
                </div>
            </div>
        </div>
                
        <div class="form-btn-group pull-right">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_security_login') }}" class="btn btn-default">Retour</a>
        </div>
    {{ form_end(form) }} {# ferme notre balise form #}
{% endblock %}
