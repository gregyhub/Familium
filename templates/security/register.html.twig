{% extends 'layout.html.twig' %}



{% block content %}
    <h1>Inscription</h1>
    
    {{ form_start(form) }} {# ouvre notre balise form #}
        <div class="container">
            <div class="row" >
                <div class="col-md-6" >
                    {{ form_row(form.prenom) }} {# affiche le bloc input pour ce champ #}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.telephone) }}
                    {{ form_row(form.datenaissance) }}
                    {{ form_row(form.adresse) }}
                    {{ form_row(form.cp) }}
                    {{ form_row(form.ville) }}
                    {{ form_row(form.pays) }}
                    {{ form_row(form.mdpclair) }}
                </div>
                <div class="col-md-6">                    
                    <img href="">{{ form_row(form.avatar) }}                                                          
                </div>
            </div>
        </div>
                
        <div class="form-btn-group pull-right">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_security_login') }}" class="btn btn-default">retour</a>
        </div>
    {{ form_end(form) }} {# ferme notre balise form #}
{% endblock %}
